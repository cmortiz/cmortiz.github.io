---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="prose">
    <header class="post-header">
      <h1>{frontmatter.title}</h1>
      {frontmatter.date && <time datetime={frontmatter.date}>{new Date(frontmatter.date).toLocaleDateString()}</time>}
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .post-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .post-header h1 {
    margin-bottom: 0.5rem;
    color: var(--primary);
  }

  time {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  /* Typography for Markdown Content */
  .content :global(h2) {
    color: var(--green);
    border-bottom: 1px dashed var(--bg3);
    padding-bottom: 0.5rem;
    margin-top: 2.5rem;
  }

  .content :global(h3) {
    color: var(--yellow);
    margin-top: 2rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(ul), .content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 4px solid var(--gray);
    padding-left: 1rem;
    color: var(--text-muted);
    font-style: italic;
    margin: 1.5rem 0;
  }
  
  .content :global(img) {
      display: block;
      margin: 2rem auto;
  }
</style>
