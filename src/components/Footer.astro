<style>
  .footer {
    padding: 2rem 0;
    margin-top: auto;
    border-top: 1px solid var(--bg2);
    color: var(--text-muted);
    font-size: 0.9rem;
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-links a {
    color: var(--text-muted);
  }

  .social-links a:hover {
    color: var(--primary);
  }
</style>
