const today = new Date();
---

<footer class="footer">
  <div class="container">
    <p>
      &copy; {today.getFullYear()} Carlos M. Ortiz Marrero. All rights reserved.
    </p>
    <div class="social-links">
      <a href="mailto:carlos.ortiz.marrero@colostate.edu" target="_blank"
        >Email</a
      >
      <a
        href="https://scholar.google.com/citations?user=dQNjXX8AAAAJ"
        target="_blank">Google Scholar</a
      >
      <a href="https://github.com/cmortiz" target="_blank">GitHub</a>
