---
interface Link {
  label: string;
  url: string;
}

interface Props {
  title: string;
  subtitle?: string;
  details?: string;
  image?: string;
  links?: Link[];
  index?: number;
}

const { title, subtitle, details, image, links, index } = Astro.props;
---

<div class="card">
  {image && (
    <div class="card-image">
      <img src={image} alt={title} />
    </div>
  )}
  <div class="card-content">
    <h3 class="card-title">
      {index !== undefined && <span class="card-number">#{index}</span>} {title}
    </h3>
    {subtitle && <p class="card-subtitle">{subtitle}</p>}
    {details && <p class="card-details">{details}</p>}
    
    {links && links.length > 0 && (
      <div class="card-links">
        {links.map((link) => (
          <a href={link.url} target="_blank" rel="noopener noreferrer" class="card-link">
            [{link.label}]
          </a>
        ))}
      </div>
    )}
  </div>
</div>

<style>
  .card {
    background-color: var(--bg1);
    border: 1px solid var(--bg2);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease, border-color 0.2s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .card:hover {
    transform: translateY(-4px);
    border-color: var(--accent-green);
  }

  .card-number {
    color: var(--accent-green);
    margin-right: 0.5rem;
    font-weight: bold;
  }

  .card-image {
    width: 100%;
    height: 220px; /* Increased height to maximize size */
    overflow: hidden;
    border-bottom: 1px solid var(--bg2);
    background-color: var(--bg1);
    padding: 1rem; /* Increased padding for better breathing room */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* Prevents cropping */
    border-radius: 4px;
    box-shadow: none;
    max-height: 100%;
  }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .card-title {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
    color: var(--fg0);
    line-height: 1.4;
  }

  .card-subtitle {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
    font-style: italic;
  }

  .card-details {
    font-size: 0.9rem;
    color: var(--accent-green);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .card-links {
    margin-top: auto;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .card-link {
    font-size: 0.85rem;
    color: var(--primary);
    text-decoration: none;
  }

  .card-link:hover {
    color: var(--accent-green);
  }
</style>
